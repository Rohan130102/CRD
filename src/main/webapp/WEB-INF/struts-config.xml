<!DOCTYPE struts-config PUBLIC
       "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
       "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="regForm"
			type="com.dailywork.form.SignupForm" />
		<form-bean name="loginForm"
			type="com.dailywork.form.LoginForm" />
		<form-bean name="TaskForm"
			type="com.dailywork.form.TaskForm" />
	</form-beans>
	<action-mappings>
		<action path="/" forward="/pages/login.jsp"/>
		<action path="/login" parameter="actionType" name="loginForm" type="com.dailywork.action.UserAction">
			<forward name="success" path="/pages/home.jsp" />
		</action>
		<action path="/signup" parameter="actionType" name="regForm" type="com.dailywork.action.UserAction">
			<forward name="success" path="/pages/home.jsp" />
		</action>
		<action path="/signupPage" forward="/pages/signup.jsp"/>
	</action-mappings>
</struts-config>