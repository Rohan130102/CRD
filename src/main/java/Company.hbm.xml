<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.crd.pojo.Company" table="COMPANY">
		<id name="compId">
			<generator class="increment" />
		</id>
		<property name="compName" length="50" />
		<property name="compAddress" length="4000" />
		<property name="companyGSTN" unique="true" length="100" />
	</class>
</hibernate-mapping>